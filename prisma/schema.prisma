// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  role       UserRole
  name       String
  hostelName String?  // For hostel wardens - Agasthya, Vasishta, or Gautama
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  visitRequests VisitRequest[]
  approvals     Approval[]
  scanLogs      ScanLog[]
}

enum UserRole {
  PARENT
  SECURITY
  HOSTEL_WARDEN
}

model Student {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  rollNumber String @unique
  course     String
  branch     String
  year       Int
  hostelName String
  roomNumber String?

  // Relations
  visitRequests VisitRequest[]
}

model VisitRequest {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  parentId    String        @db.ObjectId
  studentId   String        @db.ObjectId
  vehicleNo   String?
  purpose     String?
  status      RequestStatus @default(PENDING)
  qrCode      String        @unique
  validFrom   DateTime
  validUntil  DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  parent    User        @relation(fields: [parentId], references: [id])
  student   Student     @relation(fields: [studentId], references: [id])
  approvals Approval[]
  scanLogs  ScanLog[]
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  INSIDE
  OUT
}

model Approval {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  visitRequestId  String   @db.ObjectId
  wardenId        String   @db.ObjectId
  status          Boolean
  remarks         String?
  approvedAt      DateTime @default(now())

  // Relations
  visitRequest VisitRequest @relation(fields: [visitRequestId], references: [id])
  warden       User         @relation(fields: [wardenId], references: [id])

  @@unique([visitRequestId, wardenId])
}

model ScanLog {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  visitRequestId String   @db.ObjectId
  scannedBy      String   @db.ObjectId
  scanType       ScanType
  location       String?
  timestamp      DateTime @default(now())
  remarks        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  visitRequest VisitRequest @relation(fields: [visitRequestId], references: [id])
  scanner      User         @relation(fields: [scannedBy], references: [id])
}

enum ScanType {
  ENTRY
  EXIT
}
